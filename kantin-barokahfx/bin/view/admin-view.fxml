<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AdminController">

    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="DAFTAR BARANG">
                <font><Font size="20" style="bold"/></font>
            </Label>

            <ScrollPane fitToWidth="true">
                <content>
                    <FlowPane fx:id="flowBarang"
                            hgap="10"
                            vgap="12"
                            prefWrapLength="760">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </left>

    <right>
        <VBox spacing="10" alignment="TOP_CENTER"
              prefWidth="260"
              style="-fx-background-color: #003F87;"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="KANTIN BAROKAH" textFill="WHITE">
                <font><Font size="18" style="bold"/></font>
            </Label>

            <Button text="Tambah Barang" onAction="#handleTambahBarang"
                    maxWidth="Infinity"
                    style="-fx-background-color:white;"/>

            <Button text="Lihat Transaksi" onAction="#handleLihatTransaksi"
                    maxWidth="Infinity"
                    style="-fx-background-color:white;"/>

            <Button text="Refresh" onAction="#handleRefresh"
                    maxWidth="Infinity"
                    style="-fx-background-color:white;"/>

            <Button text="Keluar" onAction="#handleKeluar"
                    maxWidth="Infinity"
                    style="-fx-background-color:white;"/>

            <TextArea fx:id="txtInfo" prefRowCount="5"
                      wrapText="true" editable="false"
                      text="Admin dapat menambah, mengubah barang dan melihat transaksi."/>
        </VBox>
    </right>
</BorderPane>