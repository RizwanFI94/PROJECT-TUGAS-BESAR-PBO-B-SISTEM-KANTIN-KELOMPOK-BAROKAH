<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.LoginController">

    <children>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="70" right="200" bottom="70" left="200"/>
            </padding>

            <VBox alignment="CENTER" spacing="12"
                  maxWidth="340"
                  style="-fx-background-color: #003F87;
                         -fx-background-radius: 40;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.2, 0, 4);">

                <padding>
                    <Insets top="90" right="80" bottom="80" left="80"/>
                </padding>

                <Label text="KANTIN BAROKAH" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>

                <TextField fx:id="txtUsername"
                           promptText="Masukkan ID"
                           maxWidth="230"/>

                <PasswordField fx:id="txtPassword"
                               promptText="Masukkan Password"
                               maxWidth="230"/>

                <ComboBox fx:id="cmbRole" maxWidth="230"/>

                <Button text="Login"
                        onAction="#handleLogin"
                        maxWidth="120"
                        style="-fx-background-color: #FF8000;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;"/>

                <Button text="Register"
                        onAction="#handleRegister"
                        maxWidth="120"
                        style="-fx-background-color: #00AA00;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </children>
</StackPane>